{
  "manifest_version": 3,
  "name": "Focus Booster & TTS",
  "version": "1.1",
  "description": "A Chrome extension that detects inactivity and helps regain focus with challenges and TTS.",
  "permissions": ["tts", "idle", "storage","sidePanel", "windows", "scripting", "activeTab", "tabs", "notifications"],
  "background": {
      "service_worker": "background.js"
  }
  ,"web_accessible_resources": [
        {
            "resources": ["datasets/*.csv"],
            "matches": ["<all_urls>"]
        }
    ]
  ,
  "host_permissions": ["http://localhost:5000/","<all_urls>"], 
  "action": {
      "default_icon": "icon.png"
      },
  "side_panel": {
    "default_title": "Side Panel",
    "default_path": "summarysidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["summarization.js"]
    }
  ]
}
