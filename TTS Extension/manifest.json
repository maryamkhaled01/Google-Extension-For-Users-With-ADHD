{
  "manifest_version": 3,
  "name": "Focus Booster & TTS",
  "version": "1.1",
  "description": "A Chrome extension that detects inactivity and helps regain focus with challenges and TTS.",
  "permissions": ["tts", "idle", "storage","sidePanel", "windows", "scripting", "activeTab", "tabs"],
  "background": {
      "service_worker": "background.js",
      "type": "module"
  },
  "host_permissions": ["<all_urls>"]
  ,"web_accessible_resources": [
        {
            "resources": ["datasets/*.csv"],
            "matches": ["<all_urls>"]
        }
    ]
  ,
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js","summarization.js"],
        "run_at": "document_idle"
    }
 ]
 ,
  "action": {
      "default_icon": "icon.png"
      },
  "side_panel": {
    "default_title": "Side Panel",
    "default_path": "summarysidepanel.html"
  }
}
