{
  "manifest_version": 3,
  "name": "Focus Booster & TTS",
  "version": "1.1",
  "description": "A Chrome extension that detects inactivity and helps regain focus with challenges and TTS.",
  "permissions": [
    "offscreen",
    "tts",
    "idle",
    "storage",
    "sidePanel",
    "windows",
    "scripting",
    "activeTab",
    "tabs",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": [
    "https://web-production-020c8.up.railway.app/",
    "http://localhost:5000/",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_title": "Side Panel",
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["datasets/*.csv", 
      "adjustCameraPopup.html","offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["summarization.js"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' http://localhost:5000"
  }
}
